{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "backendAppName": {
      "type": "string",
      "defaultValue": "[concat('finagent-backend-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Name of the backend App Service"
      }
    },
    "appServicePlanName": {
      "type": "string",
      "defaultValue": "finagent-app-plan",
      "metadata": {
        "description": "Name of the App Service Plan for backend"
      }
    },
    "containerGroupName": {
      "type": "string",
      "defaultValue": "finagent-frontend",
      "metadata": {
        "description": "Name of the container group for frontend apps"
      }
    },
    "containerRegistryName": {
      "type": "string",
      "defaultValue": "[concat('finagentacr', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Name of the Azure Container Registry"
      }
    },
    "frontendImage": {
      "type": "string",
      "defaultValue": "finagent-frontend:latest",
      "metadata": {
        "description": "Frontend container image name and tag"
      }
    },
    "dnsNameLabel": {
      "type": "string",
      "defaultValue": "[concat('finagent-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "DNS name label for the frontend container"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "redisName": {
      "type": "string",
      "defaultValue": "[concat('finagent-redis-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Name of the Azure Cache for Redis instance"
      }
    },
    "supabaseUrl": {
      "type": "securestring",
      "metadata": {
        "description": "Supabase URL"
      }
    },
    "supabaseAnonKey": {
      "type": "securestring",
      "metadata": {
        "description": "Supabase Anonymous Key"
      }
    },
    "supabaseServiceKey": {
      "type": "securestring",
      "metadata": {
        "description": "Supabase Service Key"
      }
    }
  },
  "variables": {
    "backendUrl": "[concat('https://', parameters('backendAppName'), '.azurewebsites.net')]",
    "containerRegistryLoginServer": "[concat(parameters('containerRegistryName'), '.azurecr.io')]",
    "frontendImageFull": "[concat(variables('containerRegistryLoginServer'), '/', parameters('frontendImage'))]"
  },
  "resources": [
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2021-06-01-preview",
      "name": "[parameters('containerRegistryName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Basic"
      },
      "properties": {
        "adminUserEnabled": true
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "B2",
        "tier": "Basic",
        "size": "B2",
        "family": "B",
        "capacity": 1
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[parameters('backendAppName')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "[resourceId('Microsoft.Cache/redis', parameters('redisName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "NODE|20-lts",
          "appSettings": [
            {
              "name": "NODE_ENV",
              "value": "production"
            },
            {
              "name": "PORT",
              "value": "8080"
            },
            {
              "name": "WEBSITES_PORT",
              "value": "3001"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "~20"
            },
            {
              "name": "SUPABASE_URL",
              "value": "[parameters('supabaseUrl')]"
            },
            {
              "name": "SUPABASE_ANON_KEY",
              "value": "[parameters('supabaseAnonKey')]"
            },
            {
              "name": "SUPABASE_SERVICE_KEY",
              "value": "[parameters('supabaseServiceKey')]"
            },
            {
              "name": "REDIS_URL",
              "value": "[concat('redis://', parameters('redisName'), '.redis.cache.windows.net:6379')]"
            }
          ],
          "alwaysOn": true,
          "http20Enabled": true,
          "minTlsVersion": "1.2"
        }
      }
    },
    {
      "type": "Microsoft.Cache/redis",
      "apiVersion": "2021-06-01",
      "name": "[parameters('redisName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "Basic",
          "family": "C",
          "capacity": 0
        },
        "enableNonSslPort": true,
        "minimumTlsVersion": "1.2"
      }
    },
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2021-09-01",
      "name": "[parameters('containerGroupName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName'))]",
        "[resourceId('Microsoft.Web/sites', parameters('backendAppName'))]"
      ],
      "properties": {
        "containers": [
          {
            "name": "frontend-nginx",
            "properties": {
              "image": "[variables('frontendImageFull')]",
              "ports": [
                {
                  "port": 80,
                  "protocol": "TCP"
                },
                {
                  "port": 443,
                  "protocol": "TCP"
                }
              ],
              "environmentVariables": [
                {
                  "name": "BACKEND_URL",
                  "value": "[variables('backendUrl')]"
                },
                {
                  "name": "NODE_ENV",
                  "value": "production"
                },
                {
                  "name": "NEXT_PUBLIC_API_URL",
                  "value": "[variables('backendUrl')]"
                },
                {
                  "name": "NEXT_PUBLIC_SUPABASE_URL",
                  "value": "[parameters('supabaseUrl')]"
                },
                {
                  "name": "NEXT_PUBLIC_SUPABASE_ANON_KEY",
                  "value": "[parameters('supabaseAnonKey')]"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 2,
                  "memoryInGB": 4
                }
              }
            }
          }
        ],
        "osType": "Linux",
        "restartPolicy": "Always",
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[parameters('dnsNameLabel')]",
          "ports": [
            {
              "port": 80,
              "protocol": "TCP"
            },
            {
              "port": 443,
              "protocol": "TCP"
            }
          ]
        },
        "imageRegistryCredentials": [
          {
            "server": "[variables('containerRegistryLoginServer')]",
            "username": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2021-06-01-preview').username]",
            "password": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2021-06-01-preview').passwords[0].value]"
          }
        ]
      }
    }
  ],
  "outputs": {
    "backendUrl": {
      "type": "string",
      "value": "[variables('backendUrl')]"
    },
    "frontendUrl": {
      "type": "string",
      "value": "[concat('http://', parameters('dnsNameLabel'), '.', parameters('location'), '.azurecontainer.io')]"
    },
    "containerRegistryLoginServer": {
      "type": "string",
      "value": "[variables('containerRegistryLoginServer')]"
    },
    "redisHostName": {
      "type": "string",
      "value": "[concat(parameters('redisName'), '.redis.cache.windows.net')]"
    }
  }
}