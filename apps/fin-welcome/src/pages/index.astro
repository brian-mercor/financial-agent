---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import ChatDemo from '../components/ChatDemo.astro';
---

<BaseLayout>
  <div class="page">
    <div class="boro"></div>
    <div class="orb a"></div>
    <div class="orb b"></div>
    <div class="orb c"></div>

    <Navbar />

    <main>
      <!-- Hero Section -->
      <section class="hero">
        <div class="wrap">
          <div>
            <span class="eyebrow">
              <span class="dot"></span>
              Open Source Backend Infrastructure
            </span>
            <h1 class="title">The Backend Your Custom UI Deserves</h1>
            <p class="subtitle">
              You've built something beautiful. Maybe it started in Lovable, Bolt, or Cursor â€“ a sleek UI that perfectly captures your vision.
              Now make it actually <em>work</em> at scale with multi-agent orchestration, real-time processing, and production-ready infrastructure.
            </p>
            <div class="actions">
              <a class="btn" href="#get-started">
                Start Building
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                  <path d="M5 12h14M13 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
              <a class="btn secondary" href="https://github.com/finagent/finagent">
                View on GitHub
              </a>
            </div>
            <div class="confidence">
              <div class="avatars" aria-hidden="true">
                <div class="avatar"></div>
                <div class="avatar"></div>
                <div class="avatar"></div>
                <div class="avatar"></div>
              </div>
              <span>Join developers building production-ready applications</span>
            </div>
          </div>

          <ChatDemo />
        </div>

        <!-- Benefits Strip -->
        <div class="benefits">
          <div class="wrap">
            <div class="benefit">
              <span class="tag">BYOI Philosophy</span>
              <h4>Bring Your Own Interface</h4>
              <p>Keep your UI. Add the backend that powers it.</p>
            </div>
            <div class="benefit">
              <span class="tag">Production Ready</span>
              <h4>Built for Scale</h4>
              <p>From prototype to production without rewrites.</p>
            </div>
            <div class="benefit">
              <span class="tag">Open Source</span>
              <h4>Extend Everything</h4>
              <p>Full access to modify, customize, and deploy.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Library/Showcase Section -->
      <section id="library" class="section">
        <div class="wrap">
          <h2 class="section-title">Built with Your Favorite UI Tools</h2>
          <p class="section-subtitle">
            From AI-generated UIs to hand-crafted interfaces. FinAgent powers them all with production-ready backend infrastructure.
          </p>

          <div class="showcase-grid">
            <div class="showcase-item">
              <div class="showcase-image">
                <div class="browser-chrome">
                  <div class="browser-dots">
                    <span></span><span></span><span></span>
                  </div>
                </div>
                <div class="site-preview lovable">
                  <div class="preview-header">
                    <span class="preview-logo">ðŸ’œ</span>
                    <span>Lovable UI</span>
                  </div>
                  <div class="preview-content">
                    <div class="preview-nav"></div>
                    <div class="preview-hero"></div>
                    <div class="preview-cards">
                      <div></div><div></div><div></div>
                    </div>
                  </div>
                </div>
              </div>
              <h4>Lovable</h4>
              <p>Beautiful UIs that need real-time data processing</p>
            </div>

            <div class="showcase-item">
              <div class="showcase-image">
                <div class="browser-chrome">
                  <div class="browser-dots">
                    <span></span><span></span><span></span>
                  </div>
                </div>
                <div class="site-preview bolt">
                  <div class="preview-header">
                    <span class="preview-logo">âš¡</span>
                    <span>Bolt App</span>
                  </div>
                  <div class="preview-content">
                    <div class="preview-sidebar"></div>
                    <div class="preview-main">
                      <div class="preview-chart"></div>
                      <div class="preview-grid"></div>
                    </div>
                  </div>
                </div>
              </div>
              <h4>Bolt</h4>
              <p>Rapid prototypes ready for production scale</p>
            </div>

            <div class="showcase-item">
              <div class="showcase-image">
                <div class="browser-chrome">
                  <div class="browser-dots">
                    <span></span><span></span><span></span>
                  </div>
                </div>
                <div class="site-preview cursor">
                  <div class="preview-header">
                    <span class="preview-logo">â–Œ</span>
                    <span>Cursor IDE</span>
                  </div>
                  <div class="preview-content">
                    <div class="preview-code">
                      <div class="code-line"></div>
                      <div class="code-line short"></div>
                      <div class="code-line"></div>
                      <div class="code-line medium"></div>
                    </div>
                    <div class="preview-terminal"></div>
                  </div>
                </div>
              </div>
              <h4>Cursor</h4>
              <p>AI-assisted development with enterprise backends</p>
            </div>

            <div class="showcase-item">
              <div class="showcase-image">
                <div class="browser-chrome">
                  <div class="browser-dots">
                    <span></span><span></span><span></span>
                  </div>
                </div>
                <div class="site-preview v0">
                  <div class="preview-header">
                    <span class="preview-logo">V0</span>
                    <span>Vercel v0</span>
                  </div>
                  <div class="preview-content">
                    <div class="preview-form">
                      <div class="form-input"></div>
                      <div class="form-input"></div>
                      <div class="form-button"></div>
                    </div>
                    <div class="preview-list">
                      <div></div><div></div>
                    </div>
                  </div>
                </div>
              </div>
              <h4>v0 by Vercel</h4>
              <p>Generated UIs with complex agent orchestration</p>
            </div>

            <div class="showcase-item">
              <div class="showcase-image">
                <div class="browser-chrome">
                  <div class="browser-dots">
                    <span></span><span></span><span></span>
                  </div>
                </div>
                <div class="site-preview replit">
                  <div class="preview-header">
                    <span class="preview-logo">ðŸŒ€</span>
                    <span>Replit App</span>
                  </div>
                  <div class="preview-content">
                    <div class="preview-console">
                      <div class="console-line"></div>
                      <div class="console-line short"></div>
                      <div class="console-line"></div>
                    </div>
                    <div class="preview-output"></div>
                  </div>
                </div>
              </div>
              <h4>Replit</h4>
              <p>Instant deployments that need robust backends</p>
            </div>

            <div class="showcase-item">
              <div class="showcase-image">
                <div class="browser-chrome">
                  <div class="browser-dots">
                    <span></span><span></span><span></span>
                  </div>
                </div>
                <div class="site-preview custom">
                  <div class="preview-header">
                    <span class="preview-logo">âœ¨</span>
                    <span>Custom UI</span>
                  </div>
                  <div class="preview-content">
                    <div class="preview-dashboard">
                      <div class="dash-widget"></div>
                      <div class="dash-widget"></div>
                      <div class="dash-widget"></div>
                      <div class="dash-widget"></div>
                    </div>
                  </div>
                </div>
              </div>
              <h4>Your Custom UI</h4>
              <p>Any framework, any design, production-ready</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Philosophy Section -->
      <section id="philosophy" class="section">
        <div class="wrap">
          <h2 class="section-title">Bring Your Own Interface (BYOI)</h2>
          <p class="section-subtitle">
            The philosophy is simple: you bring the UI, we bring everything else. Whether you're building a proprietary chat system,
            a specialized workflow tool, or a customer-facing application â€“ FinAgent provides the foundation without forcing opinions about how things should look.
          </p>

          <div class="grid-3">
            <div class="card">
              <div class="step">Your Design</div>
              <h3>Use Any UI Framework</h3>
              <p>React, Vue, Svelte, or vanilla JS. Connect your Figma designs or generated UIs directly to a robust backend.</p>
            </div>
            <div class="card">
              <div class="step">Your Logic</div>
              <h3>Custom Business Rules</h3>
              <p>Implement proprietary algorithms, integrate private data sources, and define complex agent behaviors.</p>
            </div>
            <div class="card">
              <div class="step">Your Deployment</div>
              <h3>Deploy Anywhere</h3>
              <p>Cloud, on-premise, or hybrid. The framework adapts to your infrastructure requirements.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Architecture Section -->
      <section id="architecture" class="section alt-bg">
        <div class="wrap">
          <h2 class="section-title">Two Flavors, One Foundation</h2>
          <p class="section-subtitle">
            Choose the architectural pattern that matches your needs. Both share the same core benefits:
            production-ready infrastructure, built-in best practices, and infinite extensibility.
          </p>

          <div class="architecture-grid">
            <div class="arch-option">
              <div class="arch-header">
                <h3>Event-Driven Architecture</h3>
                <span class="arch-badge">Real-time streams</span>
              </div>
              <p>Perfect for applications that need to:</p>
              <ul>
                <li>Respond to real-time data streams</li>
                <li>Handle asynchronous workflows</li>
                <li>Coordinate complex agent chains</li>
                <li>Process events from multiple sources</li>
              </ul>
              <div class="code-preview">
                <code>{`// Event-driven agent coordination
agent.on('user.query', async (data) => {
  const agents = await orchestrator.dispatch([
    'sentiment-analyzer',
    'intent-classifier',
    'response-generator'
  ]);
  return agents.aggregate();
});`}</code>
              </div>
            </div>

            <div class="arch-option">
              <div class="arch-header">
                <h3>Microservices Architecture</h3>
                <span class="arch-badge">Independent scale</span>
              </div>
              <p>Ideal when you need:</p>
              <ul>
                <li>Discrete, scalable services</li>
                <li>Independent deployment cycles</li>
                <li>Team ownership boundaries</li>
                <li>Polyglot development</li>
              </ul>
              <div class="code-preview">
                <code>{`// Microservice agent deployment
const agentService = new FinAgent.Service({
  name: 'nlp-processor',
  scaling: { min: 2, max: 100 },
  resources: { memory: '2GB', cpu: '1000m' }
});`}</code>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section id="features" class="section">
        <div class="wrap">
          <h2 class="section-title">Start Fast, Scale Confidently</h2>
          <p class="section-subtitle">
            Most exciting applications die in the gap between prototype and production.
            With FinAgent, you start where others get stuck.
          </p>

          <div class="feature-showcase">
            <div class="feature-card">
              <div class="feature-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <h4>Multi-Agent Orchestration</h4>
              <p>Coordinate specialized AI agents working in parallel or sequence. Handle complex workflows with built-in error recovery.</p>
            </div>

            <div class="feature-card">
              <div class="feature-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <h4>Real-time Processing</h4>
              <p>Stream data processing with WebSocket support. Handle thousands of concurrent connections without breaking a sweat.</p>
            </div>

            <div class="feature-card">
              <div class="feature-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <h4>Production Infrastructure</h4>
              <p>Built-in monitoring, logging, and tracing. Auto-scaling, health checks, and graceful shutdowns included.</p>
            </div>

            <div class="feature-card">
              <div class="feature-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <polyline points="14 2 14 8 20 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <h4>Extensive Documentation</h4>
              <p>Comprehensive guides, API references, and real-world examples. Get productive in minutes, not weeks.</p>
            </div>

            <div class="feature-card">
              <div class="feature-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M18 20V10M12 20V4M6 20v-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <h4>Built-in Analytics</h4>
              <p>Track performance metrics, agent interactions, and system health. Make data-driven optimizations.</p>
            </div>

            <div class="feature-card">
              <div class="feature-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
              <h4>Enterprise Security</h4>
              <p>Role-based access control, encryption at rest and in transit. SOC2 compliant patterns built-in.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section id="get-started" class="section">
        <div class="wrap">
          <div class="cta-card">
            <h2 class="cta-title">Your Vision, Your Interface, Your Rules</h2>
            <p class="cta-subtitle">
              This isn't about limiting what you can build. It's about removing the obstacles that prevent you from building it.
              Connect your UI, configure your agents, integrate your data, and ship.
            </p>
            <div class="cta-actions">
              <a class="btn primary" href="https://docs.finagent.dev/quickstart">
                Quick Start Guide
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none">
                  <path d="M5 12h14M13 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
              <a class="btn secondary" href="https://github.com/finagent/finagent">
                Explore on GitHub
              </a>
            </div>
            <div class="cta-features">
              <span class="pill">MIT License</span>
              <span class="pill">TypeScript</span>
              <span class="pill">Production Ready</span>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer>
      <div class="footwrap">
        <div>
          <div class="brand">
            <div class="logo"></div>
            <span>FinAgent</span>
          </div>
          <p class="copyright">Â© 2024 FinAgent. Open source backend infrastructure.</p>
        </div>
        <div class="footlinks">
          <a href="https://docs.finagent.dev">Documentation</a>
          <a href="https://github.com/finagent/finagent">GitHub</a>
          <a href="https://discord.gg/finagent">Discord</a>
          <a href="https://twitter.com/finagent">Twitter</a>
        </div>
      </div>
    </footer>
  </div>
</BaseLayout>

<style>

  /* Sections */
  .section-title {
    font-family: "Space Grotesk", Inter, sans-serif;
    font-size: 2rem;
    margin-bottom: 10px;
  }

  .section-subtitle {
    color: var(--muted);
    max-width: 65ch;
    margin-bottom: 30px;
  }

  .step {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 6px 10px;
    border-radius: 999px;
    font-weight: 700;
    font-size: .8rem;
    background: linear-gradient(135deg, rgba(90,209,255,.22), rgba(122,255,198,.22));
    border: 1px dashed rgba(255,255,255,.2);
  }

  /* Architecture */
  .architecture-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
    margin-top: 30px;
  }

  .arch-option {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 24px;
  }

  .arch-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
  }

  .arch-header h3 {
    margin: 0;
  }

  .arch-badge {
    background: linear-gradient(135deg, rgba(122,255,198,.18), rgba(90,209,255,.14));
    border: 1px dashed rgba(122,255,198,.25);
    padding: 4px 10px;
    border-radius: 999px;
    font-size: .82rem;
    font-weight: 600;
  }

  .arch-option ul {
    margin: 12px 0;
    padding-left: 20px;
    color: var(--muted);
  }

  .arch-option li {
    margin: 6px 0;
  }

  .code-preview {
    background: rgba(0,0,0,.3);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 12px;
    margin-top: 16px;
    overflow-x: auto;
  }

  .code-preview code {
    font-size: .85rem;
    color: var(--brand);
    font-family: 'Monaco', 'Courier New', monospace;
    white-space: pre;
  }

  /* Features */
  .feature-showcase {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-top: 30px;
  }

  .feature-card {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 20px;
    transition: transform .2s ease;
  }

  .feature-card:hover {
    transform: translateY(-2px);
  }

  .feature-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(90,209,255,.18), rgba(122,255,198,.14));
    border-radius: 12px;
    margin-bottom: 12px;
  }

  .feature-card h4 {
    margin: 0 0 8px;
    font-family: "Space Grotesk", Inter, sans-serif;
  }

  .feature-card p {
    margin: 0;
    color: var(--muted);
    font-size: .95rem;
  }

  /* CTA */
  .cta-card {
    background: linear-gradient(180deg, rgba(122,255,198,.08), rgba(90,209,255,.06));
    border: 1px solid rgba(122,255,198,.25);
    border-radius: 24px;
    padding: 48px;
    text-align: center;
  }

  .cta-title {
    font-family: "Space Grotesk", Inter, sans-serif;
    font-size: 2.5rem;
    margin: 0 0 12px;
  }

  .cta-subtitle {
    color: var(--muted);
    max-width: 65ch;
    margin: 0 auto 24px;
    font-size: 1.1rem;
  }

  .cta-actions {
    display: flex;
    gap: 12px;
    justify-content: center;
    margin-bottom: 20px;
  }

  .cta-features {
    display: flex;
    gap: 10px;
    justify-content: center;
  }

  .pill {
    display: inline-flex;
    gap: 8px;
    align-items: center;
    background: var(--glass-2);
    border: 1px dashed rgba(255,255,255,.15);
    padding: 6px 10px;
    border-radius: 999px;
    color: var(--muted);
    font-size: .85rem;
  }


  /* Responsive */
  @media (max-width: 980px) {

    .architecture-grid {
      grid-template-columns: 1fr;
    }

    .feature-showcase {
      grid-template-columns: 1fr;
    }

    .footwrap {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 16px;
    }

    .footlinks {
      justify-content: center;
    }

    .cta-card {
      padding: 32px 20px;
    }

    .cta-title {
      font-size: 1.8rem;
    }
  }
</style>